{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node-terminal",
      "name": "Run Script: start:debug",
      "request": "launch",
      "command": "nvm use node && npm run start:debug",
      "cwd": "${workspaceFolder}"
    }
  ]
}